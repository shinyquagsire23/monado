root = true

[*]
charset = utf-8
insert_final_newline = true

[*.{c,h,cpp}]
indent_style = tab
indent_size = 8
max_line_length = 80

[*.py]
indent_size = 4

[*.html]
indent_size = 2

[*.json]
indent_size = 4
